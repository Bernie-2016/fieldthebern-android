<com.berniesanders.fieldthebern.views.AddAddressView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/bernie_dark_blue"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        android:paddingTop="0dp"
        android:orientation="vertical"
        >

            <TextView
                android:id="@+id/instructions_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="@string/correct_address_reminder"
                android:drawableLeft="@drawable/ic_pin_drop_white_48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="@string/example_address"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:singleLine="true"
                />
            <EditText
                android:id="@+id/apartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="@string/apartment_number"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:singleLine="true"
                />
        <TextView
            android:id="@+id/reminder_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="@string/apartment_number"
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:visibility="gone"
            />
        </LinearLayout>

    <TextView
        android:id="@+id/ready_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/b_light_blue2"
        android:text="@string/ready_to_knock"
        android:layout_margin="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        />
<View
    android:id="@+id/submit"
    android:layout_width="match_parent"
    android:layout_height="@dimen/large_button_height"
    android:layout_alignParentBottom="true"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:layout_margin="16dp"
    android:layout_toRightOf="@id/ready_label"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_button_height"
        android:text="@string/start_visit_btn"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/dark_blue2"
        android:layout_margin="16dp"
        android:layout_toRightOf="@id/ready_label"
        android:textAllCaps="false"
        />


</com.berniesanders.fieldthebern.views.AddAddressView>
