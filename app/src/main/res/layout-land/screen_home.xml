<?xml version="1.0" encoding="utf-8"?>
<com.berniesanders.fieldthebern.views.HomeView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bernie_dark_blue"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_temp"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <View
                android:id="@+id/canvass_btn_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/large_button_height"
                android:layout_margin="16dp"
                android:background="@color/dark_blue2"
                android:layout_alignParentBottom="true"
                />

            <View
                android:id="@+id/issues_btn_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/large_button_height"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="0dp"
                android:background="@color/dark_blue2"
                android:layout_above="@id/canvass_btn_color"
                />
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/screen_home_canvass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/large_button_height"
                android:background="?attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_pin_drop_white_24dp"
                android:gravity="left|center_vertical"
                android:text="@string/screen_home_canvass"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_margin="16dp"
                android:layout_alignParentBottom="true"
                android:paddingLeft="16dp"
                android:drawablePadding="16dp"
                />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/screen_home_issues"
                android:layout_width="match_parent"
                android:layout_height="@dimen/large_button_height"
                android:background="?attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_issues"
                android:gravity="left|center_vertical"
                android:layout_above="@id/canvass_btn_color"
                android:text="@string/screen_home_issues"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="0dp"
                android:paddingLeft="16dp"
                android:drawablePadding="16dp"
                />

        </RelativeLayout>


    </LinearLayout>
</com.berniesanders.fieldthebern.views.HomeView>
