<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:background="@color/bernie_dark_blue">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:id="@+id/titleView"
      style="@style/LearnHeader"
      fontPath="fonts/Lato-Heavy.ttf"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/learn_title_2"
      tools:ignore="MissingPrefix" />

    <TextView
      android:id="@+id/textView"
      style="@style/LearnParagraph"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/learn_text_2_1" />

    <TextView
      android:id="@+id/textView2"
      style="@style/LearnParagraph"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/learn_text_2_2" />
  </LinearLayout>
</ScrollView>
