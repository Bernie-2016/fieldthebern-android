<com.berniesanders.fieldthebern.views.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="240dp"
  android:layout_height="match_parent"
  android:layout_gravity="start"
  android:background="@color/bernie_dark_blue"
  android:orientation="vertical">

  <LinearLayout
    android:id="@+id/drawer_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bernie_darker_blue"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp">

    <ImageView
      android:id="@+id/drawer_header_avatar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingBottom="16dp"
      android:src="@drawable/ic_face_white_48dp" />

    <TextView
      android:id="@+id/drawer_header_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingBottom="2dp"
      android:text="@string/app_name"
      android:textColor="@android:color/white"
      android:textSize="14sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/drawer_header_email"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@android:color/white"
      android:textSize="14sp"
      tools:text="@string/bernie_email" />

  </LinearLayout>

  <ListView
    android:id="@+id/drawer_listview"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/bernie_dark_blue"
    android:choiceMode="singleChoice"
    android:divider="@android:color/transparent"
    android:dividerHeight="0dp" />
</com.berniesanders.fieldthebern.views.NavigationView>
