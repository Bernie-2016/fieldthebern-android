<com.berniesanders.fieldthebern.views.ProfileSettingsView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/bernie_dark_blue">

    <LinearLayout
        android:id="@+id/drawer_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/submit_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_button_height"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="14dp"
            android:gravity="center"
            android:text="@string/edit_your_profile"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="normal" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/submit_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_button_height"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="14dp"
            android:gravity="center"
            android:text="@string/log_out"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="normal" />
    </LinearLayout>
</com.berniesanders.fieldthebern.views.ProfileSettingsView>
