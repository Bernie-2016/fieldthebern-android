<com.berniesanders.fieldthebern.views.StatePrimaryView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_horizontal_margin"
  android:paddingLeft="@dimen/activity_vertical_margin"
  android:paddingRight="@dimen/activity_vertical_margin"
  android:paddingTop="@dimen/activity_horizontal_margin"
  tools:background="@color/bernie_dark_blue">

  <android.support.v7.widget.AppCompatImageView
    android:id="@+id/state_primary_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/iowa" />

  <LinearLayout
    android:id="@+id/linear_layout_state_primary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_toRightOf="@id/state_primary_image"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/state_primary_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:text="@string/iowa"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/state_primary_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:paddingLeft="12dp"
      android:text="@string/caucuses"
      android:textColor="@color/b_light_blue2"
      android:textSize="14sp" />

  </LinearLayout>

  <TextView
    android:id="@+id/state_primary_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/linear_layout_state_primary"
    android:layout_marginLeft="30dp"
    android:layout_toRightOf="@id/state_primary_image"
    android:layout_weight="1"
    android:text="@string/sample_date"
    android:textColor="@color/white"
    android:textSize="14sp" />

  <TextView
    android:id="@+id/state_primary_deadline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/state_primary_date"
    android:layout_marginTop="24dp"
    android:text="@string/sample_reg_deadline"
    android:textColor="@color/white"
    android:textSize="15sp" />

  <TextView
    android:id="@+id/state_primary_description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/state_primary_deadline"
    android:layout_marginTop="14dp"
    android:text="@string/sample_description"
    android:textColor="@color/white"
    android:textSize="14sp" />

</com.berniesanders.fieldthebern.views.StatePrimaryView>
