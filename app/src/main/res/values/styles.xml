<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/dark_blue2</item>
        <item name="colorPrimary">@color/bernie_dark_blue</item>
        <item name="colorAccent">@color/dark_blue2</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlNormal">@color/dark_blue2</item>
        <!-- You can also set colorControlNormal, colorSwitchThumbNormal. -->
        <item name="android:textColorHint">@color/b_light_blue2</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="PageMargins" parent="AppTheme">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="BernieBlueButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/dark_blue2</item>
        <item name="colorControlHighlight">@color/light_blue2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FacebookBlueButton" parent="BernieBlueButton">
        <item name="colorButtonNormal">@color/fb_blue</item>
    </style>


</resources>
