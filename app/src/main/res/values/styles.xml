<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/bernie_dark_blue</item>
        <item name="colorPrimary">@color/bernie_dark_blue</item>
        <item name="colorAccent">@color/bernie_dark_blue</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <!-- You can also set colorControlNormal, colorSwitchThumbNormal. -->
    </style>

    <style name="PageMargins" parent="AppTheme">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

</resources>
